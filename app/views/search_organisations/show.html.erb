<div class="page-header-my">
  <h1 class="text-center title">STREFA WOLONTARIUSZA</h1>
</div>
<ol class="breadcrumb">
  <li><%= link_to 'Strona główna', home_index_path %></li>
  <li class="active">Strefa wolontariusza</li>
</ol>
  <nav>
      <div class="container-fluid">
          <div class"navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
           </div>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav nav-justified nav-vol nav-all menu-text">
            <li class="active">
                <%= link_to 'Strona główna', home_index_path %>
            </li>
            <li class="active">
              <%= link_to 'Zarejestruj się', new_user_registration_path %>
            </li>
            <li class="active">
              <%= link_to 'Wyszukaj organizację', new_search_organisation_path %>
            </li>
            <li class="active">
              <%= link_to 'Wyszukaj osobę prywatną', home_index_path %>
            </li>
          </ul>
      </div>
   </nav>
  <div class="tab">
<% if @search_organisations.search_organisations.empty? %>
<p> Nie znaleziono organizacji</p>
<% else %> 
<table class="table table-bordered table-hover table-condensed table-responsive">
  <thead>
    <tr class="th">
      <th>Nazwa</th>
      <th>Miasto</th>
      <th>Rodzaj wolontariatu</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="form">
    <% @search_organisations.search_organisations.each do |c| %>
      <tr>
        <td><%= c.name %></td>
        <td><%= c.city %></td>
        <td><%= c.volontary_type.name %></td>
        <td><%= link_to 'Zobacz', c %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
</div>

