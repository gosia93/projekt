<div class="page-header-my">
  <h1 class="text-center title">STREFA WOLONTARIUSZA</h1>
</div>
<ol class="breadcrumb">
  <li><%= link_to 'Strona główna', home_index_path %></li>
  <li class="active">Strefa wolontariusza</li>
</ol>
  <nav>
      <div class="container-fluid">
          <div class"navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
           </div>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav nav-justified nav-vol nav-all menu-text">
            <li class="active">
                <%= link_to 'Strona główna', home_index_path %>
            </li>
            <li class="active">
              <%= link_to 'Zarejestruj się', new_user_registration_path %>
            </li>
            <li class="active">
              <%= link_to 'Wyszukaj organizację', new_search_organisation_path %>
            </li>
            <li class="active">
              <%= link_to 'Wyszukaj osobę prywatną', search_individuals_path %>
            </li>
          </ul>
      </div>
   </nav>
<div class="tab">
<div class="col-lg-6 col-lg-offset-3">
<div id="search_organisation">
  <%= form_for @search_organisation, html: {:'accept-charset' => "UTF-8"} do |s| %>
  <div class="field but">
  	<label class="title">Wpisz miasto:</label><br>
     <%= s.text_field :city, class: "form-control input-lg title" %>
  </div>
  <div class="field but">
   	<label class="title">Wybierz rodzaj wolontariatu:</label><br>
  		<%= s.collection_select(:volontary_type_id, VolontaryType.all, :id, :name, {prompt: true}, class: "form-control input-lg title" ) %>
  </div>
    <button id='submit_search' class="actions but title accept">Szukaj</button>
  <% end -%>
</div>
</div>
</div>
