  
<%= form_for @volonteer, html: {multipart: true} do |f| %>
  <% if @volonteer.errors.any? %>
   <div id="error_explanation" class="alert alert-danger" role="alert">
      <h4>Wystąpiły błędy: </h4>

      <ul>
      <% @volonteer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-lg-6 col-lg-offset-3">
  <div class="field but title accept">
    <% if @volonteer.photo.present? %>
      <p>
        <%= image_tag @volonteer.photo.url, size: "130x200", alt: "Zdjęcie wolontariusza"%>
      </p>
    <% end %>
    <%= f.file_field :photo %>
  </div>
  <div class="field but">
    <label class="title">Imię</label><br>
    <%= f.text_field :name, class: "form-control input-lg" %>
  </div>
  <div class="field but">
    <label class="title">Nazwisko</label><br>
    <%= f.text_field :surname, class: "form-control input-lg" %>
  </div>
  <div class="field but">
    <label class="title">Wiek</label><br>
    <%= f.number_field :age, class: "form-control input-lg" %>
  </div>
  <div class="field but">
    <label class="title">Miasto</label><br>
    <%= f.text_field :city, class: "form-control input-lg" %>
  </div>
  <div class="field but">
    <label class="title">O mnie</label><br>
    <%= f.text_area :about, class: "form-control input-lg"  %>
  </div>
   <div class="field but">
    <label class="title">Rodzaj wolontariatu</label><br>
   <%= collection_select(:volonteer, :volontary_type_id, VolontaryType.all, :id, :name, {prompt: true}, class: "form-control input-lg title" ) %>
  </div>

  <div>
    <%= f.submit "Potwierdź", class: "btn btn-default col-lg-2 col-lg-offset-10" %>
  </div>
<% end %>
</div>

