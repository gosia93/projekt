
<% if user_signed_in? && current_user.is_volonteer? %>
  <%= render 'menu/menu_volonteers_choosen' %>
<% end %>
<% if user_signed_in? && current_user.is_organisation?  %>
   <%= render 'menu/menu_organisations_choosen2' %>
<% end %>
  <div class="form title">
    <div class="row">
      <div class="col-lg-2 col-lg-offset-2">
        <p class="col-lg-offset-1">
          <%= image_tag @organisation.logo.url, size: "200x200", alt: "Logo organizacji"%>
        </p>
      </div>
      <div class="col-lg-6 col-lg-offset-1">
        <p>
          <strong>Nazwa:</strong>
          <%= @organisation.name %>
        </p>

        <p>
          <strong>Miasto:</strong>
          <%= @organisation.city %>
        </p>

        <p>
          <strong>REGON:</strong>
          <%= @organisation.regon %>
        </p>
      </div>
    </div>
    <div class="col-lg-8 col-lg-offset-2 row but">
      <p>
        <strong>Opis:</strong>
        <%= @organisation.about %>
      </p>
      <div>
        <% if @organisation.video.present? %>
          <p class="col-lg-offset-1">
            <%= video_tag @organisation.video.url, size: "600x480", :controls => true%>
          </p>
        <% end %>
      </div>
      <p class="col-lg-offset-1 ">
        <%= render partial: "comments/comments", locals: {commentable: @organisation} %>
        <%= render partial: "comments/form", locals: {commentable: @organisation} %>
      </p>
    </div>
  </div>
  <div class="col-lg-12">
    <button type="button" class="accept col-lg-4 col-lg-offset-4">
      <%= link_to 'Skontaktuj się z organizacją', home_index_path %>
    </button>
 </div>
