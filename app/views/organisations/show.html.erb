<p id="notice"><%= notice %></p>
<div class="page-header-my">
  <h1 class="text-center title">STREFA WOLONTARIUSZA</h1>
</div>
<ol class="breadcrumb">
  <li><%= link_to 'Strona główna', home_index_path %></li>
  <li class="active">Strefa wolontariusza</li>
</ol>
  <nav>
      <div class="container-fluid">
          <div class"navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
           </div>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav nav-justified nav-vol nav-all menu-text">
            <li class="active">
                <%= link_to 'Strona główna', home_index_path %>
            </li>
            <li class="active">
              <%= link_to 'Zarejestruj się', new_user_registration_path %>
            </li>
            <li class="active">
              <%= link_to 'Wyszukaj organizację', home_index_path %>
            </li>
            <li class="active">
              <%= link_to 'Wyszukaj osobę prywatną', home_index_path %>
            </li>
          </ul>
      </div>
   </nav>
<div class="form title">
<div class="row">
<div class="col-lg-2 col-lg-offset-2">
<p class="col-lg-offset-1">
<%= image_tag @organisation.logo.url, size: "200x200", alt: "Logo organizacji"%>
</p>
</div>
<div class="col-lg-6 col-lg-offset-1">
<p>
  <strong>Nazwa:</strong>
  <%= @organisation.name %>
</p>

<p>
  <strong>Miasto:</strong>
  <%= @organisation.city %>
</p>

<p>
  <strong>REGON:</strong>
  <%= @organisation.regon %>
</p>
</div>
</div>
<div class="col-lg-8 col-lg-offset-2 row but">
<p>
  <strong>Opis:</strong>
  <%= @organisation.about %>
</p>
<div>
<% if @organisation.video.present? %>
<p class="col-lg-offset-1">
<%= video_tag @organisation.video.url, size: "600x480", :controls => true%>
</p>
<% end %>
</div>
<p class="col-lg-offset-1">
<%= render partial: "comments/comments", locals: {commentable: @organisation} %>
<%= render partial: "comments/form", locals: {commentable: @organisation} %>
</p>
</div>
</div>
<div>
<div class="col-lg-12">
<button type="button" class="accept col-lg-4 col-lg-offset-4"><%= link_to 'Skontaktuj się z organizacją', home_index_path %></button>
</div>
</div>
