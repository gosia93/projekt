 <%= render 'menu/menu_volonteers_choosen' %>
<div class= "tab">
<table class="table table-bordered table-hover table-condensed table-responsive">
  <thead>
    <tr class="th">
      <th>Nazwa</th>
      <th>Miasto</th>
      <th>Rodzaj wolontariatu</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="form">
    <% @organisations.each do |organisation| %>
      <tr>
        <td><%= organisation.name %></td>
        <td><%= organisation.city %></td>
        <td><%= organisation.volontary_type.name %></td>
        <td><%= link_to 'Zobacz', organisation %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
