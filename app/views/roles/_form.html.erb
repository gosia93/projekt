<%= form_for(@role) do |f| %>
  <% if @role.errors.any? %>
    <div id="error_explanation" class="alert alert-danger" role="alert">
      <h2><%= pluralize(@role.errors.count, "error") %> Wystąpiły błędy</h2>

      <ul>
      <% @role.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-lg-6 col-lg-offset-3">
  <div class="field but">
    <label class="title">Nazwa</label><br>
    <%= f.text_field :name, class: "form-control input-lg" %>
  </div>
  <div>
    <%= f.submit "Potwierdź", class: "btn btn-default col-lg-2 col-lg-offset-10" %>
  </div>
<% end %>
</div>
